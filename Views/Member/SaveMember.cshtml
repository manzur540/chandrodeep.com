@model Member_App.Models.Member

@{
    ViewData["Title"] = "Save Member";
}
@section Styles {
    <link href="~/css/savemember.css" rel="stylesheet" asp-append-version="true" />
}

<div class="container mt-1">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm">
                <div class="card-header bg-light text-center">
                    <h4>Member Registration Form</h4>
                </div>
                <div class="card-body">
                    <form id="memberForm" enctype="multipart/form-data" novalidate>
                        @Html.AntiForgeryToken()

                        <!-- Name -->
                        <div class="mb-3">
                            @Html.LabelFor(m => m.Name, new { @class = "form-label" })
                            @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "Enter name" })
                            @Html.ValidationMessageFor(m => m.Name, "", new { @class = "validation-message" })
                        </div>

                        <!-- Address -->
                        <div class="mb-3">
                            @Html.LabelFor(m => m.Address, new { @class = "form-label" })
                            @Html.TextBoxFor(m => m.Address, new { @class = "form-control", placeholder = "Enter address" })
                            @Html.ValidationMessageFor(m => m.Address, "", new { @class = "validation-message" })
                        </div>

                        <!-- Department -->
                        <div class="mb-3">
                            @Html.LabelFor(m => m.Department, new { @class = "form-label" })
                            @Html.TextBoxFor(m => m.Department, new { @class = "form-control", placeholder = "Enter department" })
                            @Html.ValidationMessageFor(m => m.Department, "", new { @class = "validation-message" })
                        </div>

                        <!-- Unique ID -->
                        <div class="mb-3">
                            @Html.LabelFor(m => m.Unique_ID, new { @class = "form-label" })
                            @Html.TextBoxFor(m => m.Unique_ID, new { @class = "form-control", placeholder = "Enter unique ID" })
                            @Html.ValidationMessageFor(m => m.Unique_ID, "", new { @class = "validation-message" })
                        </div>

                        <!-- Email -->
                        <div class="mb-3">
                            @Html.LabelFor(m => m.Email, new { @class = "form-label" })
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Enter email" })
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "validation-message" })
                        </div>

                        <!-- Phone -->
                        <div class="mb-3">
                            @Html.LabelFor(m => m.Phone, new { @class = "form-label" })
                            @Html.TextBoxFor(m => m.Phone, new { @class = "form-control", placeholder = "Enter phone" })
                            @Html.ValidationMessageFor(m => m.Phone, "", new { @class = "validation-message" })
                        </div>

                        <!-- Image Upload -->
                        <div class="mb-3">
                            <label for="file" class="form-label">Upload Image</label>
                            <input type="file" name="file" id="file" class="form-control" />
                            @Html.ValidationMessageFor(m => m.Image, "", new { @class = "validation-message" })
                        </div>

                        <button type="submit" class="btn btn-primary w-100">Save</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $("#memberForm").submit(function (e) {
            e.preventDefault();

            if (!$(this).valid()) {
                return;
            }

            var formData = new FormData(this);

            $.ajax({
                type: "POST",
                url: "/Member/SaveMember",
                data: formData,
                contentType: false,
                processData: false,
                success: function (response) {
                    alert(response.message);
                    $("#memberForm")[0].reset();
                    $(".validation-message").text("");
                },
                error: function () {
                    alert("Something went wrong!");
                }
            });
        });
    </script>

    @await Html.PartialAsync("_ValidationScriptsPartial")
}
