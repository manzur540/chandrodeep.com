<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MyApp</title>

    <!-- CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/1.12.1/css/jquery.dataTables.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Member_App.styles.css" asp-append-version="true" />
    @RenderSection("Styles", required: false)
</head>
<body>
    <!-- ✅ Header -->
    <header class="app-header">

        <!-- ✅ Pure CSS Hamburger -->
        <div class="hamburger" onclick="toggleSidebar(this)">
            <span></span>
            <span></span>
            <span></span>
        </div>

        <a class="brand" asp-controller="Home" asp-action="Index">MyApp</a>

        <ul class="header-nav">
            <li class="header-item user-info">
                <i class="bi bi-person-circle icon"></i>
                <span class="phone">@User.FindFirst("phone")?.Value</span>
            </li>
            <li class="header-item">
                <a class="logout-btn" asp-controller="Account" asp-action="Logout">
                    <i class="bi bi-box-arrow-right icon"></i> Logout
                </a>
            </li>
        </ul>
    </header>


    <!-- ✅ Main Body -->
    <div class="main-container">
        <!-- ✅ Sidebar -->
        <nav class="sidebar">
            <ul>
                @if (User.IsInRole("Admin"))
                {
                    <li>
                        <a asp-controller="Account" asp-action="ApproveUsers">
                            <i class="fas fa-user-check"></i>
                            <span class="text">Approve Users</span>
                        </a>
                    </li>
                    <li>
                        <a asp-controller="Member" asp-action="SaveMember">
                            <i class="fas fa-user-plus"></i>
                            <span class="text">Registration</span>
                        </a>
                    </li>
                    <li>
                        <a asp-controller="Member" asp-action="List">
                            <i class="fas fa-users"></i>
                            <span class="text">Member List</span>
                        </a>
                    </li>
                    <li>
                        <a asp-controller="AccountTransaction" asp-action="AccountTransaction">
                            <i class="fas fa-exchange-alt"></i>
                            <span class="text">Transactions</span>
                        </a>
                    </li>
                    <li>
                        <a asp-controller="AccountOpen" asp-action="AccountOpen">
                            <i class="fas fa-university"></i>
                            <span class="text">Account Open</span>
                        </a>
                    </li>
                    <li>
                        <a href="#" class="sidebar-dropdown-toggle">
                            <i class="fas fa-chart-bar"></i>
                            <span class="text">Reports</span>
                        </a>
                        <ul class="sidebar-submenu">
                            <li>
                                <a asp-controller="Report" asp-action="TransactionwiseAccReport">
                                    <i class="fas fa-file-invoice-dollar"></i>
                                    <span class="text">Transaction Report</span>
                                </a>
                            </li>
                            <li>
                                <a asp-controller="Report" asp-action="AccountBalanceReport">
                                    <i class="fas fa-wallet"></i>
                                    <span class="text">Account Balance Report</span>
                                </a>
                            </li>
                        </ul>
                    </li>
                    <li>
                        <a asp-controller="AccountTransaction" asp-action="PendingTransactions">
                            <i class="fa-solid fa-spinner"></i>
                            <span class="text">PendingTransactions</span>
                        </a>
                    </li>

                }
                @if (User.IsInRole("User"))
                {
                    <li>
                        <a asp-controller="Member" asp-action="SaveMember">
                            <i class="fas fa-user-plus"></i>
                            <span class="text">Registration</span>
                        </a>
                    </li>
                    <li>
                        <a asp-controller="Member" asp-action="List">
                            <i class="fas fa-users"></i>
                            <span class="text">Member List</span>
                        </a>
                    </li>
                    <li>
                        <a asp-controller="AccountTransaction" asp-action="AccountTransaction">
                            <i class="fas fa-exchange-alt"></i>
                            <span class="text">Transactions</span>
                        </a>
                    </li>
                    <li>
                        <a asp-controller="AccountOpen" asp-action="AccountOpen">
                            <i class="fas fa-university"></i>
                            <span class="text">Account Open</span>
                        </a>
                    </li>
                    <li>
                        <a href="#" class="sidebar-dropdown-toggle">
                            <i class="fas fa-chart-bar"></i>
                            <span class="text">Reports</span>
                        </a>
                        <ul class="sidebar-submenu">
                            <li>
                                <a asp-controller="Report" asp-action="TransactionwiseAccReport">
                                    <i class="fas fa-file-invoice-dollar"></i>
                                    <span class="text">Trans.Report</span>
                                </a>
                            </li>
                            <li>
                                <a asp-controller="Report" asp-action="AccountBalanceReport">
                                    <i class="fas fa-wallet"></i>
                                    <span class="text">Ac.Bal.Report</span>
                                </a>
                            </li>
                        </ul>
                    </li>
                   
                }
            </ul>
            <div class="sidebar-footer">
                <i class="fas fa-copyright"></i> <span class="text">2025 COA</span>
            </div>

        </nav>



        <!-- ✅ Main Content -->
        <main role="main" class="main-content">
            @RenderBody()
        </main>
    </div>

    <!-- ✅ Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.datatables.net/1.12.1/js/jquery.dataTables.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)



    <script>
        $(document).ready(function () {
            // Dropdown submenu toggle
            $(".sidebar-dropdown-toggle").click(function (e) {
                e.preventDefault();
                let submenu = $(this).next(".sidebar-submenu");
                $(".sidebar-submenu").not(submenu).slideUp();
                submenu.slideToggle(200);
            });
        });

             function toggleSidebar() {
          document.querySelector(".sidebar").classList.toggle("collapsed");
        }
    </script>



    
</body>
</html>
