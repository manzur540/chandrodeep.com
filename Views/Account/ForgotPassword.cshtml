@model Member_App.Models.ForgotPasswordViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Forgot Password</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
   

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="bg-light d-flex justify-content-center align-items-center vh-100">

    <div class="card shadow p-4" style="width: 400px;">
        <div class="card-header text-center bg-white">
            <h3 class="text-primary">Forgot Password</h3>
            <p class="text-muted small">Enter your phone number to reset</p>
        </div>

        <div class="card-body">
            <form asp-action="ForgotPassword" method="post">
                <!-- ✅ Phone Field -->
                <div class="mb-3">
                    <label class="form-label">Phone</label>
                    @Html.TextBoxFor(m => m.Phone, new { @class = "form-control", placeholder = "Enter your phone number" })
                    <small class="text-danger">
                        @Html.ValidationMessageFor(m => m.Phone)
                    </small>
                </div>

                <!-- ✅ Submit Button -->
                <div class="d-grid">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-send"></i> Submit
                    </button>
                </div>
            </form>

            <!-- ✅ Error Message as Alert -->
            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger mt-3 text-center">
                    @ViewBag.Error
                </div>
            }
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <partial name="_ValidationScriptsPartial" />
</body>
</html>
