@model IEnumerable<Member_App.Models.AccountTransactionModel>

<h3 class="text-warning">Pending Transactions (Need Approval)</h3>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>TransId</th>
            <th>Account Number</th>
            <th>Type</th>
            <th>Amount</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var t in Model)
        {
            <tr>
                <td>@t.TransId</td>
                <td>@t.AccountNumber</td>
                <td>@t.TransType</td>
                <td>@t.TransAmount</td>
                <td>@t.Description</td>
                <td>
                    <form asp-action="ApproveTransaction" method="post">
                        <input type="hidden" name="transId" value="@t.TransId" />
                        <button type="submit" class="btn btn-success btn-sm">Approve</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
