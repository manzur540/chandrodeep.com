@{
    ViewData["Title"] = "Account Balance Report Filter";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-12 col-md-8 col-lg-6 col-xl-4">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-light text-center">
                    <h4 class="mb-0 text-primary">Account Balance Report</h4>
                </div>
                <div class="card-body">

                    <form asp-controller="Report"
                          asp-action="AccountBalanceReportPDF"
                          method="get"
                          target="_blank">

                        <div class="mb-3 row">
                            <label for="startDate" class="col-sm-4 col-form-label text-end fw-bold">
                                Start Date:
                            </label>
                            <div class="col-sm-8">
                                <input type="date" id="startDate" name="startDate" class="form-control" required />
                            </div>
                        </div>

                        <div class="mb-3 row">
                            <label for="endDate" class="col-sm-4 col-form-label text-end fw-bold">
                                End Date:
                            </label>
                            <div class="col-sm-8">
                                <input type="date" id="endDate" name="endDate" class="form-control" required />
                            </div>
                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn btn-success w-75">
                                <i class="bi bi-file-earmark-pdf me-1"></i>
                                Generate PDF Report
                            </button>
                        </div>

                    </form>

                </div>
            </div>
        </div>
    </div>
</div>
