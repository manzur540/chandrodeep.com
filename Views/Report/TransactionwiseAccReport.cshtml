@{
    ViewData["Title"] = "Transaction Report Filter";
    Layout = "_Layout";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-12 col-md-8 col-lg-6 col-xl-4">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-light text-center">
                    <h4 class="mb-0 text-primary">Transaction Report</h4>
                </div>
                <div class="card-body">
                    <form method="get" action="@Url.Action("TransactionwiseAccReportPDF", "Report")" target="_blank">

                        <div class="mb-3 row align-items-center">
                            <label for="accountNumber" class="col-sm-4 col-form-label text-end fw-bold">
                                Acc Number
                            </label>
                            <div class="col-sm-8">
                                <input type="text" id="accountNumber" name="accountNumber" class="form-control" required />
                            </div>
                        </div>

                        <div class="mb-3 row align-items-center">
                            <label for="startDate" class="col-sm-4 col-form-label text-end fw-bold">
                                Start Date
                            </label>
                            <div class="col-sm-8">
                                <input type="date" id="startDate" name="startDate" class="form-control" required />
                            </div>
                        </div>

                        <div class="mb-3 row align-items-center">
                            <label for="endDate" class="col-sm-4 col-form-label text-end fw-bold">
                                End Date
                            </label>
                            <div class="col-sm-8">
                                <input type="date" id="endDate" name="endDate" class="form-control" required />
                            </div>
                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn btn-success w-75">
                                <i class="bi bi-file-earmark-pdf-fill"></i> View Report
                            </button>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>